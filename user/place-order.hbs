<script>
  $("#checkout-button").click(() => {
    $.ajax({
      url: '/place-order',
      data: $('#checkout-form').serialize(),
      type: 'POST', // Make sure to specify the HTTP method
      success: (response) => {
        alert(response);
        if(response.status){
          location.href='/order-success'
        }
      }
    });
  });

</script>